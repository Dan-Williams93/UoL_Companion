<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_dashboard"
    tools:context="com.example.daniel.university_of_lincoln_companion.Dashboard"
    android:background="#ffffff"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/relative1"
            android:layout_marginTop="50dp">

            <!-- BLACKBOARD -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:id="@+id/Blackboard"
                card_view:cardCornerRadius="2dp"
                android:elevation="5dp"
                android:onClick="goToBlackboard">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="55dp"
                        android:id="@+id/Blackboardlogo"
                        android:layout_gravity="center"
                        android:src="@drawable/blackboard_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Blackboard"
                        android:layout_gravity="center"
                        android:textSize="8sp"
                        android:layout_marginTop="3dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- EMAIL -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/UniMain"
                android:layout_margin="10dp"
                android:id="@+id/Email"
                card_view:cardCornerRadius="2dp"
                android:elevation="5dp"
                android:onClick="goToEmail">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@android:drawable/ic_dialog_email"
                        android:layout_gravity="center"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Email"
                        android:layout_gravity="center"
                        android:textSize="8sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- STAFF -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/UniMain"
                android:layout_margin="10dp"
                android:id="@+id/staff"
                card_view:cardCornerRadius="2dp"
                android:elevation="5dp"
                android:onClick="goToStaff">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:src="@drawable/staff"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Staff Directory"
                        android:layout_gravity="center"
                        android:textSize="8sp"
                        android:layout_marginTop="7dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <!-- TIMETABLE -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/UniMain"
                android:layout_margin="10dp"
                android:id="@+id/Test"
                card_view:cardCornerRadius="2dp"
                android:elevation="5dp"
                android:onClick="get_Timetable">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_event"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Timetable"
                        android:layout_gravity="center"
                        android:textSize="8sp"/>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- SOCIAL -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/UniMain"
                android:layout_margin="10dp"
                android:id="@+id/Social"
                card_view:cardCornerRadius="2dp"
                android:elevation="5dp"
                android:onClick="goToSocial">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_supervisor_account"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Social"
                        android:layout_gravity="center"
                        android:textSize="8sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- IMPORTANT NUMBERS -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/UniMain"
                android:layout_margin="10dp"
                android:id="@+id/ImportantNumbers"
                card_view:cardCornerRadius="2dp"
                android:elevation="5dp"
                android:onClick="goToContact">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:src="@android:drawable/stat_sys_phone_call"
                        android:layout_gravity="center"
                        android:tint="#BDBDBD"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Important\nNumbers"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textSize="8sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

             <!--IMPORTANT DATES -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/UniMain"
                android:layout_margin="10dp"
                android:id="@+id/ImDates"
                card_view:cardCornerRadius="2dp"
                android:elevation="5dp"
                android:onClick="getDates">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_event_note"
                        android:layout_gravity="center"
                        android:tint="#BDBDBD"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Important Dates"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="8sp"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- Find PC -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/UniMain"
                android:layout_margin="10dp"
                android:id="@+id/FindPC"
                card_view:cardCornerRadius="2dp"
                android:elevation="5dp"
                android:onClick="goToFindPC">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_computer"
                        android:layout_gravity="center"
                        android:tint="#BDBDBD"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find PC"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:textSize="8sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!-- CAMPUS MAP -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/UniMain"
                android:layout_margin="10dp"
                android:id="@+id/map"
                card_view:cardCornerRadius="2dp"
                android:elevation="5dp"
                android:onClick="goToMap">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:src="@android:drawable/ic_menu_mapmode"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Campus Map &amp; Room Finder"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:onClick="goToMap"
                        android:textSize="8sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

</LinearLayout>
